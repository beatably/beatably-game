# Copy this file to .env and fill in your Spotify credentials
# Local dev mirrors production by using backend callback flow.
# Also ensure BOTH redirect URIs are added in your Spotify app:
#   - Production: https://beatably-backend.onrender.com/callback
#   - Local dev:  http://localhost:3001/callback
SPOTIFY_CLIENT_ID=8925c39462514dc492ca0bfb675ed706
SPOTIFY_CLIENT_SECRET=39d062fb40974ec9b5ad3e938b67256c

# Backend callback (recommended for this repo)
# Must exactly match an entry in your Spotify App Redirect URIs.
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3001/callback

# Frontend base URI (used for post-auth redirect from backend)
FRONTEND_URI=http://127.0.0.1:5173

# === Feature flags ===
CHART_MODE_ENABLE=false
MUSICBRAINZ_ENABLE=true
REMASTER_FILTER_ENABLE=true

# === Difficulty thresholds ===
# Non-chart mode uses Spotify popularity (0-100)
NON_CHART_EASY=75
NON_CHART_NORMAL=50
NON_CHART_HARD=0
# Chart mode uses rank ceilings (1=top, 100=bottom)
CHART_EASY_MAX_RANK=20
CHART_NORMAL_MAX_RANK=50
CHART_HARD_MAX_RANK=100

# === MusicBrainz ===
MB_USER_AGENT=BeatablyGame/1.0.0 (https://github.com/beatably/beatably-game; contact@example.com)
MB_CACHE_PATH=./cache/musicbrainz-recordings.json
MB_RPS=1
MB_MIN_CONFIDENCE=0.6
MB_YEAR_DIFF_THRESHOLD=2

# === Chart Provider ===
# Remote sources (GitHub mirror of Billboard Hot 100)
CHART_REMOTE_ALL_URL=https://raw.githubusercontent.com/mhollingshead/billboard-hot-100/main/all.json
CHART_REMOTE_RECENT_URL=https://raw.githubusercontent.com/mhollingshead/billboard-hot-100/main/recent.json
CHART_REMOTE_DATE_PREFIX=https://raw.githubusercontent.com/mhollingshead/billboard-hot-100/main/date/
# Local fallback sample (relative to repo root)
CHART_LOCAL_SAMPLE_PATH=./data/chart-hits-sample.json
CHART_FETCH_TIMEOUT_MS=12000
